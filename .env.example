# N.E.T.R.A Security Configuration Template
# Copy this file to .env and fill in your values

# JWT Secret Key (Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(64))")
SECRET_KEY=your_secret_key_here_change_in_production

# File Encryption Key (Generate with: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your_encryption_key_here_change_in_production

# Token expiration in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment: development or production
ENVIRONMENT=development

# Allowed CORS origins (comma-separated)
# For production, set to your domain: https://yourdomain.com
ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Maximum file upload size in MB
MAX_FILE_SIZE_MB=50
